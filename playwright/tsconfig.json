{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "tests-out",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "../node_modules/@types",
      "../types"
    ]
  },
  "include": ["tests/**/*.ts", "../types/**/*.d.ts"]
}

